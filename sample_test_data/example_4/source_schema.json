    "properties": {
      "product_id": {
        "type": "string"
      },
      "product_name": {
        "type": "string"
      },
      "price": {
        "type": "number",
        "minimum": 0
      },
      "quantity": {
        "type": "integer",
        "minimum": 0
      }
    },
    "required": ["product_id", "product_name", "price", "quantity"]
  }