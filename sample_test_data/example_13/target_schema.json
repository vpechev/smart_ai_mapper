{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
      "id": {
        "type": "string"
      },
      "customer_id": {
        "type": "string"
      },
      "customer_name": {
        "type": "string"
      },
      "customer_email": {
        "type": "string",
        "format": "email"
      },
      "amount": {
        "type": "number",
        "minimum": 0
      },
      "payment_date": {
        "type": "string",
        "format": "date"
      }
    },
    "required": ["id", "customer_id", "customer_name", "customer_email", "amount", "payment_date"]
  }